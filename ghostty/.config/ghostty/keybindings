# Remove default bindings
keybind = clear

# Important!
keybind = global:super+t=toggle_quick_terminal
keybind = ctrl+shift+comma=reload_config

# Move
keybind = page_up=scroll_page_up
keybind = page_down=scroll_page_down
keybind = ctrl+t>home=scroll_to_top
keybind = ctrl+t>end=scroll_to_bottom

# Copy/Paste/Select stuff
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+a=select_all
keybind = shift+up=adjust_selection:up
keybind = shift+down=adjust_selection:down
keybind = shift+left=adjust_selection:left
keybind = shift+right=adjust_selection:right

# Tab and window management
keybind = ctrl+shift+t=new_tab
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab
keybind = ctrl+shift+n=new_window
keybind = ctrl+shift+w=close_surface
keybind = ctrl+shift+q=quit

# Split terminal
keybind = ctrl+t>s>v=new_split:right			
keybind = ctrl+t>s>h=new_split:down
keybind = ctrl+t>s>f=toggle_split_zoom
keybind = ctrl+t>w>up=goto_split:top
keybind = ctrl+t>w>down=goto_split:bottom
keybind = ctrl+t>w>left=goto_split:left
keybind = ctrl+t>w>right=goto_split:right
keybind = ctrl+t>w>w=goto_split:next
keybind = ctrl+t>r>up=resize_split:up,25
keybind = ctrl+t>r>down=resize_split:down,25 
keybind = ctrl+t>r>left=resize_split:left,25 
keybind = ctrl+t>r>right=resize_split:right,25 
keybind = ctrl+t>r>equal=equalize_splits
